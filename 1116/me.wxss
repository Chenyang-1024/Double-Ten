page {
  background: white;
}

.header {
  width: 100%;
  padding-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
}

.login {
  color: #008c8c;
}

.touxiang {
  border-radius: 50%;
  width: 128rpx;
  height: 128rpx;
  margin-top: 30rpx;
  border: 1px solid #008c8c;
}

.NickName {
  color: #008c8c;
}

.button::after {
  border: none;
}
.button {
  width: 100px;
  color: white;
  background: #008c8c;
  /* border: 1px; */
  text-align: center;
  padding: 0rpx 100rpx;
  margin-top: 100px;
  border-radius: 30px;
}
.button_title {
  font-size: 1rem;
}