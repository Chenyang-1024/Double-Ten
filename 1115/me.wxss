/* 实现圆形头像 */
page {
  background: gainsboro;
}

.header {
  width: 100%;
  padding-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
}

.touxiang {
  border-radius: 128rpx;
  width: 128rpx;
  height: 128rpx;
}

.button {
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 7px 10px;
  margin: 0px;
  line-height: 1.6;
  border-radius: 0;
}
.button::after {
  border: none;
  border-radius: 0;
}
.button_title {
  font-size: 1rem;
}